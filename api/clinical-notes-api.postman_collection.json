{
  "info": {
    "name": "Clinical Notes API",
    "description": "API for managing clinical notes and patients",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "health"
              ]
            }
          }
        },
        {
          "name": "Root",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                ""
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Patients",
      "item": [
        {
          "name": "List Patients",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/patients",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "patients"
              ]
            }
          }
        },
        {
          "name": "Get Patient Notes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/patients/:patientId/notes",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "patients",
                ":patientId",
                "notes"
              ],
              "variable": [
                {
                  "key": "patientId",
                  "value": "",
                  "description": "Patient UUID"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Clinical Notes",
      "item": [
        {
          "name": "List All Notes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/notes",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "notes"
              ]
            }
          }
        },
        {
          "name": "Get Note by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/notes/:noteId",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "notes",
                ":noteId"
              ],
              "variable": [
                {
                  "key": "noteId",
                  "value": "",
                  "description": "Note UUID"
                }
              ]
            }
          }
        },
        {
          "name": "Create Note",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patient_id\": \"<patient-uuid>\",\n  \"sessionDate\": \"2026-02-13\",\n  \"sessionType\": \"initial\",\n  \"notes\": \"Patient presented with...\",\n  \"syncStatus\": \"pending\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/notes",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "notes"
              ]
            }
          }
        },
        {
          "name": "Update Note (PUT - Full Update)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sessionDate\": \"2026-02-14\",\n  \"sessionType\": \"follow_up\",\n  \"notes\": \"Updated notes content...\",\n  \"syncStatus\": \"synced\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/notes/:noteId",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "notes",
                ":noteId"
              ],
              "variable": [
                {
                  "key": "noteId",
                  "value": "",
                  "description": "Note UUID"
                }
              ]
            }
          }
        },
        {
          "name": "Update Note (PATCH - Partial Update)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notes\": \"Partially updated notes...\",\n  \"syncStatus\": \"synced\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/notes/:noteId",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "notes",
                ":noteId"
              ],
              "variable": [
                {
                  "key": "noteId",
                  "value": "",
                  "description": "Note UUID"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Note (Soft Delete)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/notes/:noteId",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "notes",
                ":noteId"
              ],
              "variable": [
                {
                  "key": "noteId",
                  "value": "",
                  "description": "Note UUID"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}